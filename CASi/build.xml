<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project name="CASi" default="doc">
	<property name="src.dir" location="src" />
	<property name="build.dir" location="bin" />
	<property name="dist.dir" location="dist" />
	<property name="docs.dir" location="doc" />
	<property name="log.dir" location="log" />
	<target name="clean">
		<delete dir="${build.dir}" />
		<delete dir="${docs.dir}" />
		<delete dir="${dist.dir}" />
		<delete dir="${log.dir}" />
	</target>
	<target name="makedir">
		<mkdir dir="${build.dir}" />
		<mkdir dir="${docs.dir}" />
		<mkdir dir="${dist.dir}" />
		<mkdir dir="${log.dir}" />
	</target>
	<target name="compile" depends="clean, makedir">
		<javac srcdir="${src.dir}" destdir="${build.dir}" includeantruntime="false">
		</javac>

	</target>
	<target name="doc" depends="compile">
		<javadoc packagenames="src" sourcepath="${src.dir}" destdir="${docs.dir}">
			<!-- Define which files / directory should get included, we include all -->
			<fileset dir="${src.dir}">
				<include name="**" />
			</fileset>
		</javadoc>
	</target>
	<target name="jar" depends="compile">
		<jar destfile="${dist.dir}\de.uniluebeck.imis.CASi.jar" basedir="${build.dir}">
			<manifest>
				<attribute name="Main-Class" value="de.uniluebeck.imis.casi.CASi" />
			</manifest>
		</jar>
	</target>
	<target name="main" depends="compile, jar, doc">
		<description>Main target</description>
	</target>
</project>
